<Window x:Class="PROG___Task_2.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG___Task_2"
        mc:Ignorable="d"
        Title="View" Height="450" Width="1072" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        
        <StackPanel>
            <Label Content="View" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            
            <StackPanel>
            <DataGrid Name="DataGrid1" AutoGenerateColumns="True" Height="293"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Student ID  " Foreground="White"/>
                <TextBox Name="txtStudent_ID" Background="#545d6a" Foreground="White" FontSize="18" Width="120"/>
                <Button Name="btnView" Click="btnView_Click" Margin="185 0" Content="View" Background="#545d6a" Foreground="White" FontSize="18" Width="259"/>

            </StackPanel>

        </StackPanel>
 

    </Border>
</Window>
